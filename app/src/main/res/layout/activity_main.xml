<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MovieSearchScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#1E2328"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_text"
            android:padding="5dp"
            android:gravity="center"
            android:text=" Movie App "
            android:textSize="30sp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enterMovieText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Enter movie title"
            android:inputType="text"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textSize="20sp"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="16dp"
            android:textColorHint="#9D9797" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#FED053"
            android:textColor="@color/black"
            android:text="  Search  " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#1E2328"
        android:layout_height="0dp"
        android:layout_weight="2">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>